<%- include('../Includes/header.ejs') %> 

<link rel="stylesheet" type="text/css" href="/css/signup.css">

</head>

<body>
    <%- include('../Includes/navigation_bar.ejs') %>

    <section class="sign-in">
      <div class="container">
          <div class="signin-content">

              <div class="signin-form">
                  <h2 class="form-title">Forgot Password</h2>
                  <form method="POST" class="register-form" id="login-form" action="/login/shop/rana_disposal/forgot">
                    <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                      <div class="form-group">
                          <label for="your_name">
                            <i class="fas fa-user"></i>
                          </label>
                          <input type="text" name="username" id="your_name" placeholder="Your Username" required onkeypress="removeError()"/>
                      </div>
                      <div class="form-group">
                          <label for="your_pass">
                            <i class="fas fa-lock"></i>
                          </label>
                          <input type="password" name="password" id="your_pass" placeholder="Password" required onkeypress="removeError()"/>
                      </div>
                      <div class="form-group">
                        <label for="your_pass">
                          <i class="fas fa-lock"></i>
                        </label>
                        <input type="password" name="confirm_password" id="your_pass" placeholder="Conform Password" required onkeypress="removeError()"/>
                    </div>
                      <div class="form-group form-button">
                          <input type="submit" name="signin" id="signin" class="form-submit" value="Continue" onclick="checkValidation()"/>
                      </div>
                  </form>
                  <!-- <div class="social-login">
                      <span class="social-label">Or login with</span>
                      <ul class="socials">
                          <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                          <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                          <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                      </ul>
                  </div> -->
              </div>
          </div>
      </div>
  </section>
  
  <script type="text/javascript" src="/javascript/login_func.js"></script>

