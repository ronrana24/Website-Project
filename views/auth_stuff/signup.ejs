<%- include('../Includes/header.ejs') %> 

<link rel="stylesheet" type="text/css" href="/css/signup.css">

</head>

<body>
    <%- include('../Includes/navigation_bar.ejs') %>

    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signin-form">
                    <h2 class="form-title">Sign up</h2>
                    <form method="POST" class="register-form" id="register-form" action="/signup/shop/rana_disposal/">
                        <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                        <div class="form-group">
                            <label for="name">
                                <i class="fas fa-user"></i>
                            </label>
                            <input type="text" name="name" id="name" placeholder="Your Name" onkeypress="removeError()" required/>
                        </div>
                        <div class="form-group">
                            <label for="username">
                                <i class="fas fa-signature"></i>
                            </label>
                            <input type="text" name="username" id="email" placeholder="Your username" onkeypress="removeError()" required/>
                        </div>
                        <div class="form-group">
                            <label for="pass">
                                <i class="fas fa-lock"></i>
                            </label>
                            <input type="password" name="password" id="pass" placeholder="Password" onkeypress="removeError()" required/>
                        </div>
                        <div class="form-group">
                            <label for="re-pass">
                                <i class="fas fa-lock"></i>
                            </label>
                            <input type="password" name="rePassword" id="re_pass" placeholder="Repeat your password" onkeypress="removeError()" onkeyup="checkPassword()" required/>
                            <span style="color: red;" id="error"></span>
                        </div>
                        <a href="/login/shop/rana_disposal/" class="signup-image-link">I am already a customer</a>
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" onclick="checkValidation()"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    

    <script type="text/javascript" src="/javascript/signup_func.js"></script>

<%- include('../Includes/footer.ejs') %> 